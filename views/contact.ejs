<div class="container text-center">
  <h1>Daftar Kontak</h1>

  <br />
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table
        class="table table-striped table-hover shadow p-3 mb-5 bg-body rounded"
      >
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Handphone</th>
          </tr>
        </thead>
        <tbody>
          <!-- Ini adalah blok template EJS yang digunakan untuk mengecek apakah daftar kontak kosong -->
          <% if (isEmpty) { %>
          <div
            class="alert alert-warning text-center shadow p-3 mb-5 bg-body rounded"
            role="alert"
          >
            <h4>DATA KONTAK KOSONG !!!</h4>
          </div>
          <!-- Jika daftar kontak kosong, tampilkan pesan "Contact Tidak Tersedia!!" -->
          <% } else { %>
          <!-- Iterasi melalui daftar kontak menggunakan forEach -->
          <% contacts.forEach((contact, index) => { index++ %>
          <tr>
            <th scope="row"><%= index++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nomorhp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bil-info-circle"></i>detail</a
              >
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
      <a
        href="/contact/add"
        class="btn btn-success btn-gradient mb-2 shadow p-2"
        >Tambah data kontak</a
      >
    </div>
  </div>
</div>
